<main>

            <section id="catalog">
                <h1>All Movies</h1>
                <div class="band">

                    {{#each content}}
                    <div class="flip flip-vertical">
                        <div class="front">
                            <img src="{{this.imageURL}}"
                                alt="{{this.title}}">
                        </div>
                        <div class="back">
                            <h1>{{this.title}}</h1>
                            <h2>Genre: {{this.genre}}</h2>
                            <p>Description: {{this.description}}</p>
                            <a href="/movie/details/{{id}}" class="details">Details</a>
                        </div>
                    </div>
                    {{else}}
                        <div class="no-posts">
                            <p class="no-offer">There are no posts yet...</p>
                        </div>
                    {{/each}}

                </div>
            </section>
        </main>