<main>

            <section id="search">
                <h1>Search</h1>
                <form method="get" class="form">
                    <input type="text" class="search" name="title" placeholder="Title..." value="{{filter.title}}">
                    <input type="text" name="genre" class="genre" placeholder="Genre..." value="{{filter.genre}}">
                    <input type="number" name="year" class="year" placeholder="Year..." value="{{filter.year}}">
                    <input type="submit" value="search">
                </form>
            </section>

            <section id="catalog">
                <div class="band">

                    {{#each content}}
                    <div class="flip flip-vertical">
                        <div class="front">
                            <img src="{{this.imageURL}}"
                                alt="{{this.title}}">
                        </div>
                        <div class="back">
                            <h1>{{this.title}}</h1>
                            <h2>Genre: {{this.genre}}</h2>
                            <p>Description: {{this.description}}</p>
                            <a href="/movie/details/{{_id}}" class="details">Details</a>
                            <a href="/cast/attach/{{_id}}" class="details">Add cast</a>
                        </div>
                    </div>
                    {{else}}
                        <div class="no-posts">
                            <p class="no-offer">There are no movies matched...</p>
                        </div>
                    {{/each}}

                </div>
            </section>

        </main>